{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "types": ["node"],
    "outFile": "./dist/out.js"
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}
